{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2023"],
		"module": "Node16",
		"moduleResolution": "node16",
		"noUncheckedIndexedAccess": true,
		"outDir": "build",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022"
	},
	"include": ["src"]
}
